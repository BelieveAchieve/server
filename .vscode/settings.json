{
  "editor.formatOnSave": false,
  "editor.tabSize": 2,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.formatOnSave": false,
  },
  // only autosave typescript files
  // cannot use different eslint config files, so defaults to .eslintrc.js
  "[typescript]": {
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
  },
  "eslint.validate": [
    "typescript",
  ],
}